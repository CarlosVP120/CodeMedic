{
  "name": "codemedic",
  "displayName": "CodeMedic",
  "description": "AI-powered code issue fixer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemedic-sidebar",
          "title": "CodeMedic",
          "icon": "resources/logo.png"
        }
      ]
    },
    "views": {
      "codemedic-sidebar": [
        {
          "id": "codemedic-issues",
          "name": "GitHub Issues"
        },
        {
          "id": "codemedic-agent-responses",
          "name": "Agent Responses"
        }
      ]
    },
    "commands": [
      {
        "command": "codemedic.refreshIssues",
        "title": "Refresh Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "codemedic.authenticate",
        "title": "Authenticate with GitHub",
        "icon": "$(github)"
      },
      {
        "command": "codemedic.showIssuePanel",
        "title": "Show Issue Details",
        "icon": "$(info)"
      },
      {
        "command": "codemedic.fixIssue",
        "title": "Fix Issue with Agent",
        "icon": "$(tools)"
      },
      {
        "command": "codemedic.showAgentResponse",
        "title": "Show Agent Response",
        "icon": "$(output)"
      },
      {
        "command": "codemedic.clearResponses",
        "title": "Clear Agent Responses",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "codemedic.fixIssue",
          "when": "view == codemedic-issues && viewItem == issue",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "axios": "^1.6.2",
    "simple-git": "^3.27.0"
  }
}
