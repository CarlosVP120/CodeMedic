{
  "name": "codemedic",
  "displayName": "CodeMedic",
  "description": "Manage and resolve GitHub issues directly within VSCode",
  "version": "0.0.1",
  "icon": "resources/barraCodeMedic.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:codemedic-issues",
    "onView:codemedic-agent-responses"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemedic.refreshIssues",
        "title": "Refresh Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "codemedic.showIssuePanel",
        "title": "Show Issue Details",
        "icon": "$(eye)"
      },
      {
        "command": "codemedic.authenticate",
        "title": "Authenticate with GitHub"
      },

      {
        "command": "codemedic.clearResponses",
        "title": "Clear Agent Responses",
        "icon": "$(clear-all)"
      },
      {
        "command": "codemedic.showAgentResponse",
        "title": "Show Agent Response Details",
        "icon": "$(open-preview)"
      },
      {
        "command": "codemedic.showAgentLogo",
        "title": "CodeMedic Agent",
        "icon": "./resources/logo.png"
      }
    ],
    "configuration": {
      "title": "CodeMedic",
      "properties": {
        "codemedic.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for OpenAI to enable AI-powered issue solutions"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemedic-sidebar",
          "title": "CodeMedic",
          "icon": "./resources/barraCodeMedic.png"
        }
      ]
    },
    "views": {
      "codemedic-sidebar": [
        {
          "id": "codemedic-issues",
          "name": "GitHub Issues"
        },
        {
          "id": "codemedic-agent-responses",
          "name": "Agent Responses"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codemedic.refreshIssues",
          "when": "view == codemedic-issues",
          "group": "navigation"
        },
        {
          "command": "codemedic.showAgentLogo",
          "when": "view == codemedic-agent-responses",
          "group": "navigation@0"
        },
        {
          "command": "codemedic.clearResponses",
          "when": "view == codemedic-agent-responses",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "codemedic.showIssuePanel",
          "when": "view == codemedic-issues && viewItem == issue",
          "group": "inline"
        },
        {
          "command": "codemedic.showAgentResponse",
          "when": "view == codemedic-agent-responses && viewItem == agentResponse",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@octokit/rest": "^20.1.0",
    "axios": "^1.6.7",
    "simple-git": "^3.23.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
